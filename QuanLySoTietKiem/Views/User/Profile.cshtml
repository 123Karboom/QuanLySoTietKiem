@model QuanLySoTietKiem.Models.ApplicationUser
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-circle fa-2x me-2"></i>
                        <h3 class="mb-0">Profile</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="bi bi-person-fill me-2"></i>Full Name
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.FullName</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="bi bi-envelope-fill me-2"></i>Email
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="bi bi-geo-alt-fill me-2"></i>Address
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Address</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold text-primary">
                                    <i class="bi bi-telephone-fill me-2"></i>Phone Number
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mb-3">
                        <label class="form-label fw-bold text-primary">
                            <i class="bi bi-wallet-fill me-2"></i>Balance
                        </label>
                        <p class="h4 text-success fw-bold">
                            @Model.SoDuTaiKhoan.ToString("C0", System.Globalization.CultureInfo.CurrentCulture)
                        </p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center gap-2">
                        <a href="/User/EditProfile" class="btn btn-primary">
                            <i class="bi bi-pencil-fill me-2"></i>Edit Profile
                        </a>
                        <a asp-action="Index" asp-controller="User" class="btn btn-outline-secondary">
                            <i class="bi bi-house-fill me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>