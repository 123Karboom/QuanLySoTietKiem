<!DOCTYPE html>
html lang="en">
head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - User Dashboard</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    :root {
        --primary-color: #2563eb;
        --sidebar-width: 280px;
        --header-height: 60px;
        --sidebar-bg: #1e293b;
        --body-bg: #f1f5f9;
    }

    body {
        background-color: var(--body-bg);
        min-height: 100vh;
        margin: 0;
    }

    /* Header styles */
    .header {
        height: var(--header-height);
        background-color: white;
        border-bottom: 1px solid #e2e8f0;
        padding: 0 1.5rem;
        position: fixed;
        top: 0;
        right: 0;
        left: var(--sidebar-width);
        z-index: 30;
        transition: left 0.3s ease;
    }

    /* Sidebar styles */
    .sidebar {
        width: var(--sidebar-width);
        background-color: var(--sidebar-bg);
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        z-index: 40;
        transition: transform 0.3s ease;
    }

    .sidebar-brand {
        height: var(--header-height);
        display: flex;
        align-items: center;
        padding: 0 1.5rem;
        color: white;
        font-size: 1.25rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .sidebar-brand i {
        margin-right: 0.75rem;
    }

    /* Main content styles */
    .main-content {
        margin-left: var(--sidebar-width);
        margin-top: var(--header-height);
        padding: 2rem;
        transition: margin-left 0.3s ease;
    }

    /* Navigation links */
    .nav-link {
        color: rgba(255, 255, 255, 0.7);
        padding: 0.75rem 1.5rem;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        color: white;
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateX(6px);
    }

    .nav-link i {
        margin-right: 0.75rem;
        font-size: 1.25rem;
        width: 1.5rem;
        text-align: center;
    }


    /* Utility classes */
    .btn-logout {
        background-color: transparent;
        color: #64748b;
        border: 1px solid #e2e8f0;
        padding: 0.5rem 1rem;
        transition: all 0.2s ease;
    }

    .btn-logout:hover {
        background-color: #f8fafc;
        color: #1e293b;
    }
</style>
/head>

<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-brand">
            <a asp-controller="User" asp-action="Dashboard" class="nav-link">
                <i class="bi bi-bank2"></i>
                <span class="text-white">UIT Banking</span>
            </a>
        </div>
        @await Html.PartialAsync("_Sidebar")
    </aside>
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <!-- Header -->
    <header class="header">
        <div class="d-flex justify-content-between align-items-center h-100">
            <button class="btn d-lg-none" id="sidebarToggle">
                <i class="bi bi-list fs-4"></i>
            </button>

            <div class="ms-auto dropdown">
                <a class="nav-link dropdown-toggle text-black d-flex align-items-center" href="#" id="userDropdown"
                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Xin chào, @ViewBag.UserName <i class="bi bi-person-fill me-2"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end bg-dark text-white" aria-labelledby="userDropdown">
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item text-white bg-dark">
                                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar toggle functionality
        const sidebar = document.querySelector('.sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');
        const sidebarToggle = document.getElementById('sidebarToggle');
        function toggleSidebar() {
            sidebar.classList.toggle('active');
            sidebarOverlay.classList.toggle('active');
        }
        sidebarToggle.addEventListener('click', toggleSidebar);
        sidebarOverlay.addEventListener('click', toggleSidebar);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>