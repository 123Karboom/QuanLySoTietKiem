@model QuanLySoTietKiem.Models.SavingsAccount.SoTietKiemDetailModel
@{
  ViewData["Title"] = "Chi tiết sổ tiết kiệm";
  Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-5">
  <div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-success text-white">
      <div class="d-flex align-items-center">
        <i class="bi bi-info-circle-fill me-2"></i>
        <h3 class="mb-0">Chi Tiết Sổ Tiết Kiệm</h3>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <label class="fw-bold">Khách hàng:</label>
            <p>@Model.TenKhachHang</p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Số Tiền Gửi Ban Đầu:</label>
            <p>@Model.SoTienGui.ToString("N0") VNĐ</p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Số Dư Hiện Tại:</label>
            <p class="text-success fw-bold">@Model.SoDuSoTietKiem.ToString("N0") VNĐ</p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Loại Sổ:</label>
            <p>@if (@Model.KyHan == 0)
              {
                <span>Không kỳ hạn</span>
              }
              else
              {
                <span>@Model.KyHan tháng</span>
              }
            </p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Số tiền thực hưởng nếu rút hôm nay:</label>
            <p>@Model.SoTienThucHuong.ToString("N0") VNĐ</p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <label class="fw-bold">Hình Thức Đáo Hạn:</label>
            <p>@Model.TenHinhThucDenHan</p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Lãi Suất Áp Dụng:</label>
            <p>@Model.LaiSuatApDung.ToString("P1")</p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Ngày Mở Sổ:</label>
            <p>@Model.NgayMoSo.ToString("dd/MM/yyyy")</p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Ngày Đáo Hạn:</label>
            <p>@Model.NgayDaoHan.ToString("dd/MM/yyyy")</p>
          </div>
          <div class="mb-3">
            <label class="fw-bold">Trạng Thái:</label>
            @if (Model.TrangThai)
            {
              <span class="badge bg-success">Đang hoạt động</span>
            }
            else
            {
              <span class="badge bg-danger">Đã đóng</span>
            }
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
          <i class="bi bi-arrow-left me-2"></i>Quay Lại
        </a>
        @if (Model.TrangThai)
        {
          <div>
            <a asp-action="AddMoney" asp-route-id="@Model.MaSoTietKiem" class="btn btn-success me-2">
              <i class="bi bi-cash me-2"></i>Gửi Thêm
            </a>
            <a asp-action="WithdrawMoney" asp-route-id="@Model.MaSoTietKiem" class="btn btn-warning">
              <i class="bi bi-cash-stack me-2"></i>Rút Tiền
            </a>
          </div>
        }
      </div>
    </div>
  </div>
</div>