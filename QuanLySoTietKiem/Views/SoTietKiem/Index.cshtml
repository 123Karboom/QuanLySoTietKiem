@model IEnumerable<QuanLySoTietKiem.Models.SoTietKiemModel>
@{
    ViewData["Title"] = "Quản lý sổ tiết kiệm";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-5">
    @* Thông báo chỗ này khi người dùng chưa được rút tiền *@
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">
            @TempData["Message"]
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="bi bi-list-ul fa-2x me-2"></i>
                    <h3 class="mb-0">Danh Sách Sổ Tiết Kiệm</h3>
                </div>
                <a asp-action="OpenSavingsAccount" class="btn btn-light">
                    <i class="bi bi-plus-circle me-2"></i>Mở Sổ Mới
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())

            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="lead mt-3">Bạn chưa có sổ tiết kiệm nào</p>
                    <a asp-action="OpenSavingsAccount" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle me-2"></i>Mở Sổ Tiết Kiệm Ngay
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Số Sổ</th>
                                <th>Số Tiền Gửi</th>
                                <th>Kỳ Hạn</th>
                                <th>Lãi Suất</th>
                                <th>Ngày Mở Sổ</th>
                                <th>Ngày Đáo Hạn</th>
                                <th>Hình thức đến hạn</th>
                                <th>Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaSoTietKiem</td>
                                    <td>@item.SoDuSoTietKiem.ToString("N0") VNĐ</td>
                                    <td>@(item.KyHan > 0 ? $"{item.KyHan} tháng" : "N/A")</td>
                                    <td>@(item.LaiSuatApDung * 100)%</td>
                                    <td>@item.NgayMoSo.ToString("dd/MM/yyyy")</td>
                                    <td>@item.NgayDaoHan.ToString("dd/MM/yyyy")</td>
                                    <td>@item.TenHinhThucDenHan</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.MaSoTietKiem" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                            Xem chi tiết
                                        </a>
                                        @* Thêm tiền vào tài khoản *@
                                        <a asp-action="AddMoney" asp-route-id="@item.MaSoTietKiem"
                                            class="btn btn-sm btn-success">
                                            <i class="bi bi-plus-circle"></i>
                                            Thêm tiền
                                        </a>
                                        @* Rút tiền *@
                                        <a asp-action="WithdrawMoney" asp-route-id="@item.MaSoTietKiem"
                                            class="btn btn-sm btn-danger">
                                            <i class="bi bi-minus-circle"></i>
                                            Rút tiền
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
