@model QuanLySoTietKiem.Models.AccountModels.RegisterrModel.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-plus-fill fa-2x me-2"></i>
                        <h3 class="mb-0">Register New Account</h3>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label fw-bold text-primary">
                                        <i class="bi bi-person-badge me-2"></i>Username
                                    </label>
                                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-bold text-primary">
                                        <i class="bi bi-envelope-fill me-2"></i>Email
                                    </label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-bold text-primary">
                                        <i class="bi bi-person-fill me-2"></i>Full Name
                                    </label>
                                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label fw-bold text-primary">
                                        <i class="bi bi-geo-alt-fill me-2"></i>Address
                                    </label>
                                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CCCD" class="form-label fw-bold text-primary">
                                        <i class="bi bi-credit-card-2-front-fill me-2"></i>ID Card
                                    </label>
                                    <input asp-for="CCCD" class="form-control" placeholder="Enter ID card number" />
                                    <span asp-validation-for="CCCD" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold text-primary">
                                        <i class="bi bi-telephone-fill me-2"></i>Phone Number
                                    </label>
                                    <input asp-for="PhoneNumber" class="form-control"
                                        placeholder="Enter phone number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-bold text-primary">
                                        <i class="bi bi-lock-fill me-2"></i>Password
                                    </label>
                                    <input asp-for="Password" class="form-control" type="password"
                                        placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label fw-bold text-primary">
                                        <i class="bi bi-shield-lock-fill me-2"></i>Confirm Password
                                    </label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password"
                                        placeholder="Confirm your password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus-fill me-2"></i>Register
                            </button>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}