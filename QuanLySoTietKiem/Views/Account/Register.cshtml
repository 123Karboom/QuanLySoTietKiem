@model QuanLySoTietKiem.Models.AccountModels.RegisterrModel.RegisterModel
@{
    ViewData["Title"] = "Trang đăng ký";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-plus-fill fa-2x me-2"></i>
                        <h3 class="mb-0">Đăng ký tài khoản</h3>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label fw-bold text-primary">
                                        <i class="bi bi-person-badge me-2"></i>Tên đăng nhập
                                    </label>
                                    <input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-bold text-primary">
                                        <i class="bi bi-envelope-fill me-2"></i>Email
                                    </label>
                                    <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-bold text-primary">
                                        <i class="bi bi-person-fill me-2"></i>Họ tên
                                    </label>
                                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label fw-bold text-primary">
                                        <i class="bi bi-geo-alt-fill me-2"></i>Địa chỉ
                                    </label>
                                    <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CCCD" class="form-label fw-bold text-primary">
                                        <i class="bi bi-credit-card-2-front-fill me-2"></i>Số CMND
                                    </label>
                                    <input asp-for="CCCD" class="form-control" placeholder="Nhập số CMND" />
                                    <span asp-validation-for="CCCD" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold text-primary">
                                        <i class="bi bi-telephone-fill me-2"></i>Số điện thoại
                                    </label>
                                    <input asp-for="PhoneNumber" class="form-control"
                                        placeholder="Nhập số điện thoại" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-bold text-primary">
                                        <i class="bi bi-lock-fill me-2"></i>Mật khẩu
                                    </label>
                                    <input asp-for="Password" class="form-control" type="password"
                                        placeholder="Nhập mật khẩu" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label fw-bold text-primary">
                                        <i class="bi bi-shield-lock-fill me-2"></i>Nhập lại mật khẩu
                                    </label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password"
                                        placeholder="Nhập lại mật khẩu" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-person-plus-fill me-2"></i>Đăng ký
                            </button>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-arrow-left me-2"></i>Trở về trang đăng nhập
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}