@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-16">
        <div class="text-center text-red-500 alert alert-danger">@ViewBag.ThongBao</div>
        <div class="flex justify-center">
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary mx-2">Đăng nhập</a>
            <a href="@Url.Action("Register", "Account")" class="btn btn-success mx-2">Đăng ký</a>
        </div>
    </div>
</div>